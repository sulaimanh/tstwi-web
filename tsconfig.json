{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "utils": [
        "jest/utils"
      ],
      "UI": [
        "components/UI"
      ],
      "components": [
        "components/"
      ],
      "pages": [
        "pages"
      ],
      "lib": [
        "lib"
      ],
      "public": [
        "public"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
